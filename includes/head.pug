  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0")
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)
    meta(property="og:title", content="Daniel Seiler - Product Design")
    meta(property="og:site_name", content="Daniel Seiler - Product Design")
    meta(property="og:url", content="https://daniel-seiler.com/")
    meta(property="og:description", content="Freelance designer and consultant for product strategy, design and branding.")
    meta(property="og:type", content="website")
    meta(property="og:image", itemprop="image", content="/assets/img/meta/favicon-32x32.png")
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:image" content="/assets/img/meta/og-1200.png")
    meta(name="twitter:image:alt", content="Daniel Seiler - Product Design")
    meta(name="msapplication-TileColor" content="#da532c")
