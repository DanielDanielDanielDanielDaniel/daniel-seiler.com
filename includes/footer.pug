mixin footer(className)
  footer.footer(class=className)
    .show-on-mobile
      .wrapper
        .footer-col
          a.footer-item(href='') Legal & privacy Settings
          .footer-item
            a.social-media-icon(href='#')
              img.clear(src="../assets/icons/icon-linkedin.svg", alt="linkedin")
              img.dark(src="../assets/icons/icon-linkedin-dark.svg", alt="linkedin")
            a.social-media-icon(href='#')
              img.clear(src="../assets/icons/icon-medium.svg", alt="medium")
              img.dark(src="../assets/icons/icon-medium-dark.svg", alt="medium")
        .footer-col
          p.footer-item Coded with passion by &#32;
            a.inner-link(href='https://bonsaitech.io', target='_blank') Bonsai Studios
          p.footer-item © 2022 – Daniel Seiler

    .show-on-desktop
      .wrapper
        .footer-col
          p.footer-item © 2022 – Daniel Seiler
        .footer-col
          a.footer-item(href='') Legal & privacy Settings
        .footer-col
          p.footer-item Coded with passion by &#32;
            a.inner-link(href='https://bonsaitech.io', target='_blank') Bonsai Studios
        .footer-col
          .footer-item.social
            a.social-media-icon(href='#')
              img.clear(src="../assets/icons/icon-linkedin.svg", alt="linkedin")
              img.dark(src="../assets/icons/icon-linkedin-dark.svg", alt="linkedin")
            a.social-media-icon(href='#')
              img.clear(src="../assets/icons/icon-medium.svg", alt="medium")
              img.dark(src="../assets/icons/icon-medium-dark.svg", alt="medium")
